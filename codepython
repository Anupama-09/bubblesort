def bubble_sort():
    n=int(input("Enter how many numbers: "))
    nums=[]
    temp=0
    for i in range(n):
        value=int(input(f"Enter value{i+1} : "))
        nums.append(value)
    print("Original list: ",nums)
    for i in range(n):
        for j in range(0, n - i - 1):
            if nums[j]<nums[j+1]:
                temp=nums[j+1]
                nums[j+1]=nums[j]
                nums[j]=temp
    print("Descending order: ",nums)
    
bubble_sort()
